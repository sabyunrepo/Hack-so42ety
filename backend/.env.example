# ==================== Application ====================
APP_ENV=dev
DEBUG=True
LOG_LEVEL=INFO
LOG_JSON_FORMAT=False

# ==================== Server ====================
BACKEND_PORT=8000

# ==================== Database (PostgreSQL) ====================
POSTGRES_USER=moriai_user
POSTGRES_PASSWORD=moriai_password
POSTGRES_DB=moriai_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ==================== Redis ====================
REDIS_HOST=redis
REDIS_PORT=6379

# ==================== Authentication ====================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=change-this-to-a-secure-random-string-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Google OAuth
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/auth/google/callback

# ==================== AI Providers ====================
# Story Generation
AI_STORY_PROVIDER=google
GOOGLE_API_KEY=your-google-api-key

# TTS (Text-to-Speech)
AI_TTS_PROVIDER=elevenlabs
ELEVENLABS_API_KEY=your-elevenlabs-api-key
TTS_DEFAULT_VOICE_ID=TxWD6rImY3v4izkm2VL0
TTS_DEFAULT_MODEL_ID=eleven_v3
TTS_DEFAULT_LANGUAGE=en

# Image Generation
AI_IMAGE_PROVIDER=google

# Video Generation (Kling)
AI_VIDEO_PROVIDER=kling
KLING_API_KEY=your-kling-api-key
KLING_ACCESS_KEY=[]
KLING_SECRET_KEY=[]
KLING_API_URL=https://api-singapore.klingai.com
KLING_MODEL_NAME=kling-v2-1
KLING_VIDEO_MODE=std
KLING_VIDEO_DURATION=5

# ==================== Storage ====================
STORAGE_PROVIDER=local
STORAGE_BASE_PATH=/app/data
STORAGE_BASE_URL=/api/v1/files

# AWS S3 (Required if STORAGE_PROVIDER=s3)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION=ap-northeast-2

# ==================== Logging & Monitoring ====================
# Sentry DSN (Leave empty to disable)
SENTRY_DSN=
SENTRY_ENVIRONMENT=dev
SENTRY_TRACES_SAMPLE_RATE=0.0

# ==================== CORS ====================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# CORS Allowed Headers (comma-separated list)
# Default includes headers required for JSON API calls, authentication, content negotiation, and request correlation.
# - Content-Type: Required for JSON request/response bodies
# - Authorization: Required for JWT bearer tokens
# - Accept: Required for content negotiation
# - X-Request-ID: Required for request correlation and tracing
# Add custom headers only if your frontend explicitly sends additional headers in cross-origin requests.
# Security note: Using '*' is not recommended as it allows any header from cross-origin requests.
CORS_ALLOW_HEADERS=Content-Type,Authorization,Accept,X-Request-ID

# ==================== Business Logic ====================
MAX_BOOKS_PER_USER=3
MAX_PAGES_PER_BOOK=5
USE_TEMPLATE_MODE=False

# ==================== HTTP Client ====================
HTTP_TIMEOUT=60.0
